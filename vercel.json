{
    "version": 2,
    "builds": [
        { "src": "package.json",        "use": "@vercel/static-build", "config": { "distDir": "dist" } },
        { "src": "server/server.js",    "use": "@vercel/node",         "config": { "includeFiles": ["server/private_docs/**"] } }
    ],
    "routes": [
        { "src": "^/api/(.*)$", "dest": "server/server.js" },
        { "handle": "filesystem" },
        { "src": "^(?!/api/).*", "dest": "/index.html" }
    ]
}
